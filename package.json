{
  "name": "bidon",
  "version": "0.0.0-development",
  "description": "Fake repository for testing ci tools",
  "main": "lib/index.js",
  "module": "src/index.js",
  "jsnext:main": "src/index.js",
  "bin": {
    "bidon": "cli.js"
  },
  "files": [
    "cli.js",
    "dist",
    "es",
    "lib",
    "src",
    "docs",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "babel src --out-dir lib",
    "lint": "eslint .",
    "test": "npm run build && ./cli.js",
    "test:ci": "npm run lint && npm run test",
    "prepublishOnly": "npm run clean && npm run build",
    "cz": "git-cz",
    "bump": "conventional-bump",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "clean": "rimraf coverage dist lib es bin",
    "semantic-release": "semantic-release"
  },
  "release": {
    "branch": "next",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guillaumearm/bidon.git"
  },
  "keywords": [
    "bidon",
    "fake-repository",
    "dummy-repository"
  ],
  "author": {
    "name": "Guillaume ARM",
    "email": "trapcodien@gmail.com",
    "url": "https://github.com/guillaumearm"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/guillaumearm/bidon/issues"
  },
  "homepage": "https://github.com/guillaumearm/bidon#readme",
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.40",
    "@babel/core": "^7.0.0-beta.40",
    "@babel/node": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@babel/preset-es2015": "^7.0.0-beta.40",
    "@babel/preset-stage-0": "^7.0.0-beta.40",
    "@babel/register": "^7.0.0-beta.40",
    "@semantic-release/changelog": "^2.0.1",
    "@semantic-release/git": "^4.0.1",
    "babel-eslint": "^8.2.2",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.16",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.18.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.0.2"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {}
}
